<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:background="@color/base_ui_white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/base_ui_white"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tv_type"
            style="@style/biz_daily_txt_style_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="母乳" />


        <TextView
            android:id="@+id/tv_capacity"
            style="@style/biz_daily_txt_style_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            tools:text="55ML" />

        <TextView
            android:id="@+id/tv_date"
            style="@style/biz_daily_txt_style_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:includeFontPadding="false"
            android:text="2020-02-23 21:45:22  至 2020-02-23 22:00:00"
            android:textSize="14dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/base_ui_color_ebebeb" />

</LinearLayout>
