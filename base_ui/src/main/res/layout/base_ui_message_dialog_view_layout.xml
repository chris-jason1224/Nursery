<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <com.cj.base_ui.view.roundshape.RoundLinearLayout
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:orientation="vertical"
        app:base_ui_rv_cornerRadius="10dp"
        android:minHeight="115dp"
        app:base_ui_rv_backgroundColor="@color/base_ui_white"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_content"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:textStyle="bold"
            android:layout_marginBottom="36dp"
            android:layout_marginTop="44dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="申请已提交，请等待审核"
            android:textColor="@color/base_ui_color_333333"
            android:textSize="16dp"/>


        <com.cj.base_ui.view.roundshape.RoundTextView
            android:id="@+id/rtv_confirm_btn"
            android:gravity="center"
            tools:text="确定"
            android:textColor="@color/base_ui_color_b52532"
            android:textSize="17dp"
            app:base_ui_rv_cornerRadius_BL="10dp"
            app:base_ui_rv_cornerRadius_BR="10dp"
            app:base_ui_rv_backgroundColor="@color/base_ui_color_fdf8f9"
            android:layout_width="match_parent"
            android:layout_height="49dp" />

    </com.cj.base_ui.view.roundshape.RoundLinearLayout>


</RelativeLayout>